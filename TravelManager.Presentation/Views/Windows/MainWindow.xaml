<mah:MetroWindow  x:Class="TravelManager.Presentation.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:TravelManager.Presentation.Convertors"
        xmlns:cor="clr-namespace:TravelManager.Presentation.Convertors"
        mc:Ignorable=""
        Title="{Binding Title}" Height="768" Width="1024">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="{x:Type Label}">
            <Style.Setters>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            </Style.Setters>
        </Style>

        <!--<Style x:Key="MyStyles" TargetType="{x:Type DockPanel}">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                    <DataTrigger Binding="{Binding ElementName=NofificationLable, Path=}" Value="New">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                                <Storyboard >
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"  From="1" To="1" Duration="0:0:3" />
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:3" From="1" To="0" DecelerationRatio=".5" Duration="0:0:2"/>
                                </Storyboard>
                            </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                </Style.Triggers>
        </Style>-->

        <Style x:Key="NotificationAnimationStyle" TargetType="{x:Type DockPanel}" >
            <Style.Triggers>
                <EventTrigger RoutedEvent="Binding.TargetUpdated">
                    <EventTrigger.Actions>
                        <StopStoryboard BeginStoryboardName="EndAnimation" />
                        <BeginStoryboard Name="NewAnimation">
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"  From="1" To="1" Duration="0:0:3" />
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:3" From="1" To="0" DecelerationRatio=".5" Duration="0:0:2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>

       
            
        <local:TripTypeToUriConverter x:Key="UriConverter" />
        <cor:NotificationConverter x:Key="NotificationConverter"/>
    </Window.Resources>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Column="1" Cursor="{Binding ElementName=MainGrid, Path=DataContext.MenuViewModel.CursorType}">
                    <esri:MapView x:Name="MainMap" Map="{Binding ElementName=MainGrid, Path=DataContext.MapViewModel.Map}" />
                </DockPanel>
                <DockPanel Grid.Column="0">
                    <DockPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>
                            <DockPanel Grid.Row="0">
                                <Border Grid.Row="0" Grid.Column="1" Background="LightGray"  Margin="10">
                                    <Label Content="Managment panel" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
                                </Border>
                            </DockPanel>
                            <StackPanel Grid.Row="1" DataContext="{Binding MenuViewModel, Mode=TwoWay}">
                                <Expander Header="Add new trip">
                                    <StackPanel>
                                        <Label Style="{StaticResource LabelStyle}" Content="Location"/>

                                        <TextBox x:Name="PositionName" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                                        <Label Style="{StaticResource LabelStyle}" Content="Location Description"/>

                                        <TextBox x:Name="PositionDescription" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                                        <Label Style="{StaticResource LabelStyle}">Visit Date</Label>

                                        <DatePicker x:Name="TripDate" SelectedDate="{Binding VisitDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" DisplayDateStart="{x:Static sys:DateTime.Today}"/>

                                        <Label Style="{StaticResource LabelStyle}">Trip types</Label>

                                        <ComboBox x:Name="PoiTypesComboBox" ItemsSource="{Binding ElementName=MainGrid, Path=DataContext.MenuViewModel.TripTypes}" 
                                                 SelectedItem="{Binding Type, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                                        <Button x:Name="buttonAdd" Grid.Column="1" FontSize="20" Margin="10" Content="Draw"
                                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                                Command="{Binding ElementName=MainGrid, Path=DataContext.MenuViewModel.DrawCommand}">
                                        </Button>

                                        <Button Grid.Column="1" FontSize="20" Margin="10"
                                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Content="Save"
                                                Command="{Binding ElementName=MainGrid, Path=DataContext.MenuViewModel.AddTrip}">
                                        </Button>

                                        <Button Grid.Column="1" FontSize="20" Margin="10" Content="remove"
                                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                                Command="{Binding ElementName=MainGrid, Path=DataContext.MenuViewModel.RemoveTripFromMap}">
                                        </Button>

                                        <Button Grid.Column="1" FontSize="20" Margin="10" Content="export"
                                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                                Command="{Binding ElementName=MainGrid, Path=DataContext.MenuViewModel.ExportTrips}">
                                        </Button>

                                    </StackPanel>
                                </Expander>
                                <Expander Grid.Row="1" Header="All trips">
                                    <ListView x:Name="TripList" ItemsSource="{Binding ElementName=MainGrid, Path=DataContext.MenuViewModel.AllTrips}" 
                                              HorizontalContentAlignment="Stretch">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn DisplayMemberBinding="{Binding Path=Name}">Name</GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Path=Description}" Width="100">Description</GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Path=VisitDate, StringFormat={}{0:MM/dd/yyyy}}">Date</GridViewColumn>
                                                <GridViewColumn Header="Type">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Image Source="{Binding Path=Type, Converter={StaticResource UriConverter}}" Width="32" Height="32"></Image>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="Delete">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Command="{Binding ElementName=MainGrid, Path=DataContext.MenuViewModel.RemoveTrip}" CommandParameter="{Binding .}">
                                                                <Canvas Name="canvas" Height="25"  Width="25">
                                                                    <Path Stroke="Red" StrokeThickness="2">
                                                                        <Path.Data>
                                                                            <PathGeometry>
                                                                                <PathGeometry.Figures>
                                                                                    <PathFigure StartPoint="0,0">
                                                                                        <LineSegment Point="25,25"/>
                                                                                    </PathFigure>
                                                                                    <PathFigure StartPoint="0,25">
                                                                                        <LineSegment Point="25,0"/>
                                                                                    </PathFigure>
                                                                                </PathGeometry.Figures>
                                                                            </PathGeometry>
                                                                        </Path.Data>
                                                                    </Path>
                                                                </Canvas>
                                                            </Button>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </Expander>
                            </StackPanel>
                        </Grid>
                    </DockPanel>
                </DockPanel>
            </Grid>
        </DockPanel>
        <Border Grid.Row="1" Background="LightGray" CornerRadius="10" >

            <DockPanel LastChildFill="True" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{Binding ElementName=MainGrid, Path=DataContext.NotificationViewModel.NotificationType, Converter={StaticResource NotificationConverter}, NotifyOnTargetUpdated=True}" Grid.Column="0"
                           HorizontalAlignment="Right" Width="32" Height="32">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="Binding.TargetUpdated">
                                        <EventTrigger.Actions>
                                            <BeginStoryboard Name="NewAnimation">
                                                <Storyboard TargetProperty="Opacity">
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"  From="0" To="1" Duration="0:0:1" />
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:3" From="1" To="0" DecelerationRatio=".5" Duration="0:0:2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger.Actions>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <Label x:Name="NofificationLable" ToolTipService.ShowDuration="5" Content="{Binding ElementName=MainGrid, Path=DataContext.NotificationViewModel.Message, NotifyOnTargetUpdated=True}" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" >
                        <Label.Style>
                            <Style TargetType="Label">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="Binding.TargetUpdated">
                                        <EventTrigger.Actions>
                                            <BeginStoryboard Name="NewAnimation">
                                                <Storyboard TargetProperty="Opacity">
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"  From="0" To="1" Duration="0:0:3" />
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:3" From="1" To="0" DecelerationRatio=".5" Duration="0:0:2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger.Actions>
                                    </EventTrigger>
                            </Style.Triggers>
                        </Style>
                        </Label.Style>
                    </Label>
                </Grid>
            </DockPanel>
        </Border>
    </Grid>
</mah:MetroWindow>
